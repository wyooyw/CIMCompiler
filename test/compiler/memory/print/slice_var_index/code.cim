def main(null<int8>){
    buf1 = Buffer(<3,3>, index, local);
    Save(buf1, [0,0], 0);
    Save(buf1, [0,1], 1);
    Save(buf1, [0,2], 2);
    Save(buf1, [1,0], 3);
    Save(buf1, [1,1], 4);
    Save(buf1, [1,2], 5);
    Save(buf1, [2,0], 6);
    Save(buf1, [2,1], 7);
    Save(buf1, [2,2], 8);

    offsets = Buffer(<2>, index, local);
    Save(offsets, [0], 0);
    Save(offsets, [1], 0);
    
    slice1 = Slice(buf1, [Load(offsets, [0]),Load(offsets, [1])], [2,2], [1,1]);
    Print(Load(slice1,[0,0])); // 0
    Print(Load(slice1,[0,1])); // 1
    Print(Load(slice1,[1,0])); // 3
    Print(Load(slice1,[1,1])); // 4

    Save(offsets, [0], 0);
    Save(offsets, [1], 1);
    slice2 = Slice(buf1, [Load(offsets, [0]),Load(offsets, [1])], [2,2], [1,1]);
    Print(Load(slice2,[0,0])); // 1
    Print(Load(slice2,[0,1])); // 2
    Print(Load(slice2,[1,0])); // 4
    Print(Load(slice2,[1,1])); // 5

    Save(offsets, [0], 1);
    Save(offsets, [1], 0);
    slice3 = Slice(buf1, [Load(offsets, [0]),Load(offsets, [1])], [2,2], [1,1]);
    Print(Load(slice3,[0,0])); // 3
    Print(Load(slice3,[0,1])); // 4
    Print(Load(slice3,[1,0])); // 6
    Print(Load(slice3,[1,1])); // 7

    Save(offsets, [0], 1);
    Save(offsets, [1], 1);
    slice4 = Slice(buf1, [Load(offsets, [0]),Load(offsets, [1])], [2,2], [1,1]);
    Print(Load(slice4,[0,0])); // 4
    Print(Load(slice4,[0,1])); // 5
    Print(Load(slice4,[1,0])); // 7
    Print(Load(slice4,[1,1])); // 8
}