{% include 'op/llm/all_gather.cim' %}

def main(){
    input = Buffer(<{{data_size}}>, fp16, __GLOBAL__);
    ag_buffer = Buffer(<{{world_size}}, {{data_size}}>, fp16, __GLOBAL__);
    input_local = Buffer(<{{data_size}}>, fp16, __OUTPUT_MEMORY__);
    ag_buffer_local = Buffer(<{{world_size}}, {{data_size}}>, fp16, __OUTPUT_MEMORY__);
    Trans(input, input_local);
    Trans(input_local, ag_buffer_local[{{core_id}}, :]);
    all_gather(ag_buffer_local);
    Trans(ag_buffer_local[:, :], ag_buffer[:, :]);
}